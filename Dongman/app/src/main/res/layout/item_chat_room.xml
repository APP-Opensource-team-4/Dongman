<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_room_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="모임 제목"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_room_last"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="마지막 메시지"
        android:textSize="13sp"
        android:textColor="#666"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tv_room_title"
        app:layout_constraintStart_toStartOf="@id/tv_room_title"
        app:layout_constraintEnd_toStartOf="@id/tv_room_time"/>

    <TextView
        android:id="@+id/tv_room_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06.20 10:07"
        android:textSize="11sp"
        android:textColor="#999"
        app:layout_constraintTop_toTopOf="@id/tv_room_last"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
